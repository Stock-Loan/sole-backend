# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql+asyncpg://sole:sole@db:5432/sole
REDIS_URL=redis://redis:6379/0

# ==========================================
# Docker Compose Services (not read by app)
# ==========================================
POSTGRES_USER=sole
POSTGRES_PASSWORD=sole
POSTGRES_DB=sole

# ==========================================
# Application Settings
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
ALLOWED_ORIGINS=["http://localhost:5173"]
ENABLE_HSTS=true

# ==========================================
# Tenancy Configuration
# ==========================================
TENANCY_MODE=multi
DEFAULT_ORG_ID=sole-llc
DEFAULT_ORG_NAME=Sole LLC
DEFAULT_ORG_SLUG=sole-llc

# ==========================================
# Authentication & Security
# ==========================================
SECRET_KEY=change-me-in-prod
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY_PATH=path-to-your-jwt-private-key.pem
JWT_PUBLIC_KEY_PATH=path-to-your-jwt-public-key.pem

# ==========================================
# Token & Session Configuration
# ==========================================
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080
SESSION_TIMEOUT_MINUTES=30
DEFAULT_PASSWORD_MIN_LENGTH=12

# ==========================================
# Rate Limiting & Protection
# ==========================================
RATE_LIMIT_PER_MINUTE=60
LOGIN_ATTEMPT_LIMIT=5
LOGIN_LOCKOUT_MINUTES=15
PROXIES_COUNT=1

# ==========================================
# Seed Admin Credentials
# ==========================================
SEED_ADMIN_EMAIL=admin@sole.com
SEED_ADMIN_PASSWORD=ChangeMe123!
SEED_ADMIN_FULL_NAME=Admin User

# ==========================================
# File Upload Configuration
# ==========================================
LOCAL_UPLOAD_DIR=local_uploads

# ==========================================
# PBGC Rate Scraping Configuration
# ==========================================
PBGC_RATE_SCRAPE_ENABLED=true
PBGC_RATE_SCRAPE_DAY=30
PBGC_RATE_SCRAPE_HOUR=0
PBGC_RATE_SCRAPE_MINUTE=0
